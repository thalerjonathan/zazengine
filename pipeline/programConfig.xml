<?xml version="1.0" encoding="ISO-8859-1"?>

<programs>
	<program name="GeometryStageProgramm">
    <shaders>
      <shader type="VERTEX" file="dr/stages/geom/geomVert.glsl"/>
      <shader type="FRAGMENT" file="dr/stages/geom/geomFrag.glsl"/>
    </shaders>

    <fragDataLocations>
      <fragDataLocation colorNumber="0" name="out_diffuse"/>
      <fragDataLocation colorNumber="1" name="out_normal"/>
      <fragDataLocation colorNumber="2" name="out_position"/>
    </fragDataLocations>

    <attribLocations>
      <attribLocation index="0" name="in_vertPos"/>
      <attribLocation index="1" name="in_vertNorm"/>
      <attribLocation index="2" name="in_texCoord"/>
    </attribLocations>
	</program>

  <program name="TransparencyProgram">
    <shaders>
      <shader type="VERTEX" file="dr/stages/transparency/transpVert.glsl"/>
      <shader type="FRAGMENT" file="dr/stages/transparency/transpFrag.glsl"/>
    </shaders>

    <fragDataLocations>
      <fragDataLocation colorNumber="0" name="out_diffuse"/>
    </fragDataLocations>

    <attribLocations>
      <attribLocation index="0" name="in_vertPos"/>
      <attribLocation index="1" name="in_vertNorm"/>
      <attribLocation index="2" name="in_texCoord"/>
    </attribLocations>
  </program>

  <program name="BlendTransparencyProgram">
    <shaders>
      <shader type="VERTEX" file="dr/stages/transparency/blendTranspVert.glsl"/>
      <shader type="FRAGMENT" file="dr/stages/transparency/blendTranspFrag.glsl"/>
    </shaders>

    <attribLocations>
      <attribLocation index="0" name="in_vertPos"/>
      <attribLocation index="2" name="in_texCoord"/>
    </attribLocations>

    <fragDataLocations>
      <fragDataLocation colorNumber="0" name="out_color"/>
    </fragDataLocations>
  </program>
  
  <program name="SkyBoxProgram">
    <shaders>
		  <shader type="VERTEX" file="dr/stages/geom/skyBoxVert.glsl"/>
		  <shader type="FRAGMENT" file="dr/stages/geom/skyBoxFrag.glsl"/>
    </shaders>

    <fragDataLocations>
		  <fragDataLocation colorNumber="0" name="out_diffuse"/>
    </fragDataLocations>

    <attribLocations>
		  <attribLocation index="0" name="in_vertPos"/>
    </attribLocations>
	</program>
	
	<program name="LightingStageProgramm">
    <shaders>
		  <shader type="VERTEX" file="dr/stages/lighting/lightVert.glsl"/>
		  <shader type="FRAGMENT" file="dr/stages/lighting/lightFrag.glsl"/>
    </shaders>

    <attribLocations>
		  <attribLocation index="0" name="in_vertPos"/>
    </attribLocations>

    <fragDataLocations>
      <fragDataLocation colorNumber="0" name="final_color"/>
    </fragDataLocations>
	</program>
	
	<program name="LightingNoShadowStageProgramm">
    <shaders>
		  <shader type="VERTEX" file="dr/stages/lighting/lightVert.glsl"/>
		  <shader type="FRAGMENT" file="dr/stages/lighting/lightNoShadowFrag.glsl"/>
    </shaders>

    <attribLocations>
		  <attribLocation index="0" name="in_vertPos"/>
    </attribLocations>

    <fragDataLocations>
      <fragDataLocation colorNumber="0" name="final_color"/>
    </fragDataLocations>
	</program>
	
	<program name="ShadowingStageProgramm">
    <shaders>
		  <shader type="VERTEX" file="dr/stages/shadowing/shadowVert.glsl"/>
		  <shader type="FRAGMENT" file="dr/stages/shadowing/shadowFrag.glsl"/>
    </shaders>

    <fragDataLocations>
		  <fragDataLocation colorNumber="0" name="fragDepth"/>
    </fragDataLocations>

    <attribLocations>
		  <attribLocation index="0" name="in_vertPos"/>
    </attribLocations>
	</program>
</programs>