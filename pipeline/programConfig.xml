<?xml version="1.0" encoding="ISO-8859-1"?>

<programs>
	<program name="GeometryStageProgramm">
		<shader type="VERTEX" file="dr/stages/geom/geomVert.glsl"/>
		<shader type="FRAGMENT" file="dr/stages/geom/geomFrag.glsl"/>
		
		<fragDataLocation colorNumber="0" name="out_diffuse"/>
		<fragDataLocation colorNumber="1" name="out_normal"/>
		<fragDataLocation colorNumber="2" name="out_position"/>
		
		<attribLocation index="0" name="in_vertPos"/>
		<attribLocation index="1" name="in_vertNorm"/>
		<attribLocation index="2" name="in_texCoord"/>
		
		<boundUniformBlock name="transforms"/>
		<boundUniformBlock name="material"/>
	</program>
	
	<program name="SkyBoxProgram">
		<shader type="VERTEX" file="dr/stages/geom/skyBoxVert.glsl"/>
		<shader type="FRAGMENT" file="dr/stages/geom/skyBoxFrag.glsl"/>
		
		<fragDataLocation colorNumber="0" name="out_diffuse"/>
		
		<attribLocation index="0" name="in_vertPos"/>
		
		<boundUniformBlock name="transforms"/>
	</program>
	
	<program name="LightingStageProgramm">
		<shader type="VERTEX" file="dr/stages/lighting/lightVert.glsl"/>
		<shader type="FRAGMENT" file="dr/stages/lighting/lightFrag.glsl"/>
		
		<attribLocation index="0" name="in_vertPos"/>

		<boundUniformBlock name="transforms"/>
		<boundUniformBlock name="light"/>
		<boundUniformBlock name="camera"/>
	</program>
	
	<program name="LightingNoShadowStageProgramm">
		<shader type="VERTEX" file="dr/stages/lighting/lightVert.glsl"/>
		<shader type="FRAGMENT" file="dr/stages/lighting/lightNoShadowFrag.glsl"/>
		
		<attribLocation index="0" name="in_vertPos"/>

		<boundUniformBlock name="transforms"/>
		<boundUniformBlock name="light"/>
		<boundUniformBlock name="camera"/>
	</program>
	
	<program name="ShadowingStageProgramm">
		<shader type="VERTEX" file="dr/stages/shadowing/shadowVert.glsl"/>
		<shader type="FRAGMENT" file="dr/stages/shadowing/shadowFrag.glsl"/>
		
		<fragDataLocation colorNumber="0" name="fragDepth"/>
		
		<attribLocation index="0" name="in_vertPos"/>

		<boundUniformBlock name="transforms"/>
	</program>
</programs>